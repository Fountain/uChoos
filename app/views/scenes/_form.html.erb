<%= form_for(@scene) do |f| %>
  <% if @scene.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scene.errors.count, "error") %> prohibited this scene from being saved:</h2>

      <ul>
      <% @scene.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag('scene[story_id]', @scene.story_id) %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :scene_text %><br />
    <%= text_area(:scene, :scene_text, :size => "66x20") %>
  </div>
  <div class="field">
    <%= f.label :scene_audio %><br />
    <%= text_field(:scene, :scene_audio, :size => "92x3") %>
  </div>
  <div class="field">
    <%= f.label :choice_text %><br />
    <%= text_area(:scene, :choice_text, :size => "66x5") %>
  </div>
  <div class="field">
    <%= f.label :choice_audio %><br />
    <%= text_field(:scene, :choice_audio, :size => "92x3") %>
  </div>
  <div class="field">
    <%= f.label :option_one %><br />
	<% if @story %>
    <%= select("scene", "option_one", @story.scenes.all.collect {|s| [ s.name, s.id ] }, { :prompt => "select scene" })%>
	<% else %>
	<%=	select("scene", "option_one", ["no scenes available"]) %>
	<% end %>
	
  </div>
  <div class="field">
    <%= f.label :option_two %><br />
	<% if @story %>
    <%= select("scene", "option_two", @story.scenes.all.collect {|s| [ s.name, s.id ] }, { :prompt => "select scene" })%>
	<% else %>
	<%=	select("scene", "option_one", ["no scenes available"]) %>
	<% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
